<Page x:Class="TeleCompany.Pages.Auth"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:TeleCompany.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Auth">

    <Grid Background="Aquamarine" Height="450" VerticalAlignment="Center" HorizontalAlignment="Left" Width="800">
        <TextBlock TextAlignment="Center" FontSize="36" Margin="0,0,0,340" Text="Auth"/>
        <TextBlock Margin="280,142,280,291">Login</TextBlock>
        <TextBox Margin="280,159,280,256" Name="LoginBox"/>
        <PasswordBox Margin="280,208,280,208" Name="PasswordBox"/>
        <Button Margin="280,247,280,169" Content="Sign up" Click="Sign_Click"/> 
        <TextBlock Margin="280,191,280,242"><Run Text="Password"/></TextBlock>

        <TextBlock Margin="280,286,280,146">
    <Hyperlink Click="Hyperlink_Click">
        <TextBlock  Text="Create new account" Height="17" Width="111" />
    </Hyperlink>
</TextBlock>
    </Grid>
</Page>
